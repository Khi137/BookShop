@model IEnumerable<_02_Layout.Areas.Admin.Models.Products>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- product section -->

<section class="product_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Tủ Sách
            </h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
               <div class="col-md-3 mb-2">
                   <div class="card border-0" style="height:100%">
                       <img class="card-img-top" src="~/img/product/@item.Image">
                       <div class="class-body">
                           <h4 class="card-title">@item.ProductName</h4>
                           <p class="card-text">Tác giả: @item.Author</p>
                           <p class="card-text">Giá tiền: @item.Price.ToString("#,##0")</p>
                       </div>
                    <div class="card-footer border-0 bg-white">
                        <a asp-controller="Carts" asp-action="Create" asp-route-id="@item.Id" class="btn btn-primary">Thêm vào giỏ hàng</a>
                    </div>
                  </div>
                </div>
            }
        </div>
        <div class="btn_box">
            <a href="" class="view_more-link">
                View More
            </a>
        </div>
    </div>
</section>

<!-- end product section -->