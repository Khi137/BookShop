@using _02_Layout.Areas.Admin.Models
@model IEnumerable<_02_Layout.Areas.Admin.Models.Accounts>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

            <!--login area start-->

                <div  style="margin-left:500px">
                    <h2>Đăng Nhập</h2>
                    <form asp-controller="Home" asp-action="Login" method="post">
                        <div class="form-group">
                            <label>Tên tài khoản <span>*</span></label>
                            <input type="text" name="Username">
                        </div>
                        <div class="form-group">
                            <label style="margin-right:29px;">Mật Khẩu <span>*</span></label>
                            <input type="password" name="Password">
                        </div>
                        <div class="login_submit">
                            <label for="remember">
                                <input id="remember" type="checkbox">
                                Remember me
                            </label>
                            <button type="submit">Đăng nhập</button>
                            <span class="text-danger">@ViewBag.ErrorMessage</span>
                        </div>
                        @if (ViewBag.Result == false)
                        {
                            <div class="alert alert-danger d-flex align-items-center mt-3" role="alert">
                                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                                <div>
                                    Đăng nhập thất bại
                                </div>
                            </div>
                        }
                    </form>
                </div>
            <!--login area start-->
